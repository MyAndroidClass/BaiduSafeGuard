<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1545A4"
    tools:context="com.zzptc.sky.dbphoneguard.fragments.FirstHelpFragment">

    <ImageView
        android:id="@+id/iv_bear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/one_key_help_bear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bear"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="危机时刻，瞬间求救"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定紧急联系人 快速求救"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_openHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/holo_green_dark"
        android:text="开启一键求救"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
