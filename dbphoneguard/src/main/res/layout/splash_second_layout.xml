<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg_color">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/splash_second_bg"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/splash_second_content"
        android:layout_centerInParent="true"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="60%"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/splash_second_top"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="30%"/>

</android.support.percent.PercentRelativeLayout>