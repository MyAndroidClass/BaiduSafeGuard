<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.zzptc.sky.dbphoneguard.activities.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="百度手机卫士"
        app:titleTextColor="@android:color/white">


        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_center"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/iv_super_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/opern_super_mode"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.zzptc.sky.dbphoneguard.view.RatingView
            android:id="@+id/rv_score"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textSize="58sp"
                android:textColor="@android:color/white"/>

        </com.zzptc.sky.dbphoneguard.view.RatingView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rowCount="2"
            app:columnCount="3"
            android:background="#F6F6F6">


            <TextView
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="手机加速"
                android:drawableTop="@mipmap/phone_accelerate"
                android:background="@android:color/white"
                android:gravity="center"
                android:drawablePadding="-5dp"
                android:layout_marginRight="2px"
                android:layout_marginBottom="2px"/>

            <TextView
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="垃圾清理"
                android:drawableTop="@mipmap/garbage_clear"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginRight="2px"
                android:layout_marginBottom="2px"/>

            <TextView
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="安全防护"
                android:drawableTop="@mipmap/security_tool"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginBottom="2px"/>

            <TextView
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="流量话费"
                android:drawableTop="@mipmap/flow_call"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginRight="2px"/>

            <TextView
                android:id="@+id/baiBaoXiang"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="百宝箱"
                android:drawableTop="@mipmap/treasure_chest_up"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginRight="2px"/>

            <TextView
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="应用管理"
                android:id="@+id/textView"
                android:drawableTop="@mipmap/app_manager"
                android:background="@android:color/white"
                android:gravity="center"/>


        </android.support.v7.widget.GridLayout>




    </RelativeLayout>

</LinearLayout>
