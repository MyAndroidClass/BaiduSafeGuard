<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--RatingView-->
    <declare-styleable name="RatingView">
        <attr name="rating_max" format="integer"/>

        <attr name="rating_unrated_color" format="color"/>
        <attr name="rating_rated_color" format="color"/>
        <attr name="rating_title_color" format="color"/>
        <attr name="rating_outline_color" format="color"/>

        <attr name="rating_default_color" format="color"/>

        <attr name="rating_title_visible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleTextImageView">
        <attr name="citv_border_width" format="dimension" />
        <attr name="citv_border_color" format="color" />
        <attr name="citv_border_overlay" format="boolean" />
        <attr name="citv_fill_color" format="color" />
        <attr name="citv_text_text" format="string"/>
        <attr name="citv_text_color" format="color"/>
        <attr name="citv_text_size" format="dimension"/>
        <attr name="citv_text_padding" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="CounterView">
        <attr name="prefix" format="string" />
        <attr name="suffix" format="string" />
        <attr name="timeInterval" format="float" />
        <attr name="incrementValue" format="float" />
        <attr name="startValue" format="float" />
        <attr name="endValue" format="float" />
        <attr name="formatText" format="boolean" />
        <attr name="autoStart" format="boolean" />
        <attr name="type" format="enum">
            <enum name="integer" value="0" />
            <enum name="decimal" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="android:text" />
    </declare-styleable>

</resources>